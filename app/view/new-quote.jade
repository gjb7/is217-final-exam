extends layout

block content
	form(method="post", action="/quote/new", role="form")
		h3= laptop.name
		
		.row
			for group in laptop.componentOptionGroups
				fieldset
					legend= group.title
						
					for option in group.componentOptions
						div.radio
							label
								input(type="radio", name=group._id, value=option._id)
								
								= option.name
						
			input(type="submit", value="Save", class="btn btn-primary")
		
	
