extends layout

block append javascripts
	script(src="/javascripts/accounting.min.js", type="text/javascript")
	script(src="/javascripts/configurator.js" type="text/javascript")
	
	script(type="text/javascript")
		| new Configurator(!{JSON.stringify(laptop)})

block content
	form(method="post", action="/quote/new", role="form")
		h3= laptop.name
		
		.row
			.col-md-9
				#configurator
							
				input(type="submit", value="Save", class="btn btn-primary")
			.col-md-3.bg-info
				h4 Laptop Configuration
				
				h4#price 0.00
				
				p= laptop.name
				
				ul#specs